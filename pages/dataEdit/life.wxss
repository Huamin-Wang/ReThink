/* pages/dataEdit/life.wxss */.data-section {
    margin: 24px 0 16px 0;
    padding: 16px;
    background: #f8fff6;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(67,233,123,0.08);
}

.life-data {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    margin-bottom: 12px;
}

.life-btn {
    background: linear-gradient(90deg, #43e97b 0%, #38f9d7 100%);
    color: #fff;
    font-weight: bold;
    border: none;
    border-radius: 8px;
    padding: 10px 28px;
    font-size: 16px;
    box-shadow: 0 1px 4px rgba(67,233,123,0.10);
}