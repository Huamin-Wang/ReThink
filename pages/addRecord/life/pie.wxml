<!-- 顶部状态栏 -->
<view class="status-bar" style="padding-top: {{statusBarHeight}}px;">
  <text class="status-title">一句话记录账单</text>
</view>

<!-- 分类导航容器 -->
<view class="nav-container">
  <block wx:for="{{categories}}" wx:key="index">
    <view
      class="nav-item {{activeIndex === index ? 'active' : ''}}"
      bindtap="onNavTap"
      data-index="{{index}}">
      {{item}}
    </view>
  </block>
</view>

<!-- 内容区域 -->
<scroll-view class="content" scroll-y="true" style="height: 100vh;">
  <record wx:if="{{activeIndex === 0}}" />
  <income wx:if="{{activeIndex === 1}}" />
  <outcome wx:if="{{activeIndex === 2}}" />
</scroll-view>