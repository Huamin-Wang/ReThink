.main-content {
  padding: 32rpx 24rpx 120rpx 24rpx;
}

.card {
  background: #fff;
  border-radius: 18px;
  box-shadow: 0 2px 12px rgba(67,233,123,0.08);
  padding: 32rpx;
  margin-bottom: 32rpx;
}

.title {
  font-size: 20px;
  font-weight: bold;
  color: #43e97b;
  margin-bottom: 24rpx;
  letter-spacing: 1px;
}
.record-area {
  width: 100%;
  height: 120rpx;
  overflow: hidden;
}

.record-movable {
  width: calc(100% + 160rpx); /* 主体 + 删除按钮的宽度 */
  height: 100%;
}

.record-wrapper {
  width: 100%;
  height: 100%;
  display: flex;
}

.record-card {
  width: 100%;
  padding: 20rpx;
  background: #fff;
  border-bottom: 1px solid #f5f5f5;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.delete-btn {
  width: 160rpx;
  height: 100%;
  background-color: #e54d42;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0; /* 不压缩按钮 */
}


.sub-title {
  color: #888;
  font-size: 14px;
  margin-bottom: 24rpx;
}

.input-box {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.amount-input {
  flex: 1;
  border: 1px solid #e0e0e0;
  border-radius: 8px;
  padding: 12rpx 16rpx;
  font-size: 16px;
  background: #fafafa;
}

.submit-button {
  width: 100%;
  background: linear-gradient(90deg, #43e97b 0%, #38f9d7 100%);
  color: #fff;
  font-size: 18px;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(67,233,123,0.10);
  margin-top: 8rpx;
}

.summary-bar {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
}

.summary-item {
  flex: 1;
  min-width: 180rpx;
  padding: 20rpx;
  border-radius: 12rpx;
  background: #f9f9f9;
  text-align: center;
  box-shadow: 0 2px 6px rgba(0,0,0,0.05);
}

.summary-item .category {
  font-size: 16px;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
}

.summary-item .amount {
  font-size: 18px;
  color: #43e97b;
  font-weight: bold;
}

.records-list {
  margin-top: 16rpx;
}

.record-card {
  padding: 20rpx;
  border-bottom: 1px solid #f0f0f0;
}

.record-main {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.record-main .desc {
  font-size: 16px;
  color: #333;
}

.record-main .amount {
  font-size: 16px;
  color: #ff5722;
  font-weight: bold;
}

.record-meta {
  margin-top: 8rpx;
  font-size: 12px;
  color: #888;
  display: flex;
  justify-content: space-between;
}

.category-tag {
  background: #e8f8f3;
  color: #2db784;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}
